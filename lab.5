import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load the dataset into a pandas DataFrame
df = pd.read_csv('temperature_rainfall_data.csv')

# Extract temperature and rainfall data
months = df['Month']
temperatures = df['Temperature']
rainfall = df['Rainfall']

# Line plot for temperature
plt.figure(figsize=(10, 6))
plt.plot(months, temperatures, marker='o', color='blue', linestyle='-')
plt.title('Monthly Temperature')
plt.xlabel('Month')
plt.ylabel('Temperature (Â°C)')
plt.xticks(rotation=45)
plt.grid(True)
plt.show()

# Scatter plot for rainfall
plt.figure(figsize=(10, 6))
plt.scatter(months, rainfall, color='green')
plt.title('Monthly Rainfall')
plt.xlabel('Month')
plt.ylabel('Rainfall (mm)')
plt.xticks(rotation=45)
plt.grid(True)
plt.show()
